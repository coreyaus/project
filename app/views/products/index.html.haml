%section.container.content-section.text-center
  .row
    .col-lg-10.col-lg-offset-1
      %h1.padbottom Listing products
      .row
        - @products.each do |product|
          .col-md-5.padbottom25{:class => cycle('col-md-offset-1','')}
            %h3.margin0.padbottom
              = link_to product.name, product
            %a{:href => product_path(product)}
              %img.padbottom{:src => product.image_url}
            %p.margin0.product-description.padbottom= product.description
            %p.padbottom
              = link_to 'Show', product, {:class => "btn btn-default btn-sm"}
              = link_to 'Edit', edit_product_path(product), {:class => "btn btn-default btn-sm"}
              = link_to 'Destroy', product, :class => "btn btn-default btn-sm", :method => :delete, :data => { :confirm => 'Are you sure?' }

      %br

      = link_to 'New Product', new_product_path, {:class => "btn btn-default btn-lg"}
