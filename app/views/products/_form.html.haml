= form_for @product do |f|
  - if @product.errors.any?
    #error_explanation
      %h2= "#{pluralize(@product.errors.count, "error")} prohibited this product from being saved:"
      %ul
        - @product.errors.full_messages.each do |msg|
          %li= msg

  .form-group
    = f.label :name, {:class => "control-label show text-left"}
    = f.text_field :name, {:class => "form-control", :placeholder => :name}
  .form-group
    = f.label :price, {:class => "control-label show text-left"}
    = f.text_field :price, {:class => "form-control", :placeholder => :price}
  .form-group
    = f.label :description, {:class => "control-label show text-left"}
    = f.text_area :description, {:class => "form-control", :placeholder => :description}
  .form-group
    = f.label :colour, {:class => "control-label show text-left"}
    = f.text_field :colour, {:class => "form-control", :placeholder => :colour}
  .form-group
    = f.label :image_url, {:class => "control-label show text-left"}
    = f.text_field :image_url, {:class => "form-control", :placeholder => :image_url}
  .checkbox.form-group.padbottom
    = f.label :featured, {:class => "control-label show text-left"} do
      = f.check_box :featured
      Would you like to feature this product on the homepage?
  .actions
    = f.submit 'Save', {:class => "btn btn-default btn-lg"}

