%section.container.content-section.text-center
  .row
    .col-lg-8.col-lg-offset-2.padtop100
      %h2 Edit #{resource_name.to_s.humanize}
      .row.padbottom20
        .col-md-6.col-md-offset-3
          = form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f|
            = devise_error_messages!
            .form-group.text-left
              = f.label :email
              %br/
              = f.email_field :email, autofocus: true, class: "form-control", placeholder: "Email"
            - if devise_mapping.confirmable? && resource.pending_reconfirmation?
              %div
                Currently waiting confirmation for: #{resource.unconfirmed_email}
            .form-group.text-left
              = f.label :password, "New Password"
              %small
                %i (leave blank if you don't want to change it)
              %br/
              = f.password_field :password, autocomplete: "off", class: "form-control", placeholder: "New Password"
            .form-group.text-left
              = f.label :password_confirmation, "Confirm New Password"
              %br/
              = f.password_field :password_confirmation, autocomplete: "off", class: "form-control", placeholder: "Confirm New Password"
            .form-group.text-left
              = f.label :current_password, "Current Password"
              %small
                %i (use your current password to confirm changes)
              %br/
              = f.password_field :current_password, autocomplete: "off", class: "form-control", placeholder: "Current Password"
            .padbottom20
              = f.submit "Update", class: "btn btn-default"

          /
            .padtopmore.padbottom
              %h4.margin0.padtop20.padbottom
                Account no longer needed?
              #{button_to "Delete my account", registration_path(resource_name), class:"btn btn-default btn-sm", data: { confirm: "Are you sure?" }, method: :delete}

          .padtop20
            = link_to "Back", :back

