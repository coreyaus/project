#featured-product-carousel.carousel.slide{"data-ride" => "carousel"}
	%ol.carousel-indicators
		- products.each.with_index do |product, index|
			%li{:class => product == products.first ? "active" : nil, "data-slide-to" => index, "data-target" => "#featured-product-carousel"}
	.carousel-inner{:role => "listbox"}
		- products.each do |product|
			.item{:class => product == products.first ? "active" : nil}
				%a{:href => product_path(product)}
					%img{:alt => product.name, :src => product.image_url}
					.carousel-caption
						%h2 #{product.name}: #{product.id}
	%a.left.carousel-control{"data-slide" => "prev", :href => "#featured-product-carousel", :role => "button"}
		%span.glyphicon.glyphicon-chevron-left{"aria-hidden" => "true"}
		%span.sr-only Previous
	%a.right.carousel-control{"data-slide" => "next", :href => "#featured-product-carousel", :role => "button"}
		%span.glyphicon.glyphicon-chevron-right{"aria-hidden" => "true"}
		%span.sr-only Next
