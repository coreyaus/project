%header.intro
  .intro-body
    .container
      .row
        .col-md-8.col-md-offset-2
          - if notice
            %p.notice.padtopmore.padbottomless= notice
          - if alert
            %p.alert.padtopmore.padbottomless= alert
          %h1.brand-heading My First App
          %p.intro-text
            Creating digital tools for progressive campaigns
            %br
            Made with
            %span.live
              %i.fa.fa-heart.animated
            in Colombia
          %a.btn.btn-circle.page-scroll{:href => @featured_product ? "#featured_product" : "#store"}
            %i.fa.fa-angle-double-down.animated
